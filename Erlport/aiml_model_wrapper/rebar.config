{erl_opts, [debug_info]}.
{deps, [
    {erlport, {git, "https://github.com/erlport/erlport.git", {branch, "master"}}},
    {javaerlang, {git, "https://github.com/fredlund/JavaErlang.git", {branch, "master"}}},
    jiffy
]}.

{provider_hooks,
    [{pre, [{compile, {default, compile}}]}]}.

{project_plugins, [rebar3_hex]}.

{package, [
    {directory, "priv"},  %% Set the directory to package.
    {defrel, "aiml_model_wrapper"}, %% Set the release name.
    {version, "1.0.0"},     %% Set the version.
    {maintainer, "Shubham Kumar <shubham.kumar@greyorange.com>"} %% Set maintainer info.
]}.